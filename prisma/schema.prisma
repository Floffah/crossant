datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["selectRelationCount", "orderByRelation", "orderByAggregateGroup"]
}

// content delivery

model Image {
  id      Int    @id @default(autoincrement())
  content String
  original String?
  Drink   Drink? @relation(fields: [drinkId], references: [id])
  drinkId Int?
}

// /order

model Drink {
  id     Int     @id @default(autoincrement())
  name   String
  images Image[]
}

// guilds
model Guild {
    id String @id

    channelListMode ListMode
    channelList String[]
}

// common
enum ListMode {
    Blacklist
    Whitelist
}
