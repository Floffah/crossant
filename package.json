{
    "name": "crossant-repo",
    "version": "1.0.0",
    "license": "MIT",
    "private": true,
    "devDependencies": {
        "@floffah/build": "^1.0.0",
        "@prisma/client": "^3.8.0",
        "@typescript-eslint/eslint-plugin": "^5.9.1",
        "@typescript-eslint/parser": "^5.9.1",
        "commitizen": "^4.2.4",
        "cz-conventional-changelog": "3.3.0",
        "eslint": "8.6.0",
        "eslint-config-next": "^12.0.8",
        "eslint-config-prettier": "^8.3.0",
        "npm-check-updates": "^12.1.0",
        "prettier": "^2.5.1",
        "prisma": "^3.8.0",
        "turbo": "^1.0.26",
        "typescript": "^4.5.4"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "vercel-build": "yarn prisma migrate-prod && yarn prisma-generate-prod && yarn workspace crossant-web next build",
        "dev:bot": "yarn workspace crossant tsup --watch --minify",
        "dev:run": "node packages/bot/dist/cli.js run --debug",
        "dev:rawrun": "node packages/bot/dist/shardstart.js --debug",
        "dev:web": "yarn workspace crossant-web next dev",
        "prod:prepare": "git pull && yarn && yarn prisma migrate-prod && yarn prisma-generate-prod && yarn workspace crossant tsup --minify",
        "deps": "yarn ncu -u --deep --reject discord-api-types",
        "prisma-generate-prod": "PRISMA_CLIENT_ENGINE_TYPE='dataproxy' prisma generate",
        "migrate-prod": "DATABASE_URL=\"$MIGRATE_DATABASE_URL\" prisma migrate deploy"
    },
    "packageManager": "yarn@3.1.1",
    "turbo": {
        "baseBranch": "origin/master",
        "pipeline": {
            "build": {
                "dependsOn": [
                    "^build"
                ],
                "outputs": [
                    ".next/**",
                    "dist/**"
                ]
            },
            "lint": {
                "outputs": []
            },
            "dev": {
                "cache": false
            }
        }
    }
}
