{
    "name": "crossant-repo",
    "version": "1.0.0",
    "license": "MIT",
    "private": true,
    "devDependencies": {
        "@floffah/build": "^1.0.0",
        "@prisma/client": "^3.2.1",
        "@typescript-eslint/eslint-plugin": "^4.33.0",
        "@typescript-eslint/parser": "^4.33.0",
        "commitizen": "^4.2.4",
        "cz-conventional-changelog": "3.3.0",
        "eslint": "^8.0.0",
        "eslint-config-next": "^11.1.2",
        "eslint-config-prettier": "^8.3.0",
        "npm-check-updates": "^11.8.5",
        "prettier": "^2.4.1",
        "prisma": "^3.2.1",
        "typescript": "^4.4.3"
    },
    "workspaces": [
        "packages/*"
    ],
    "scripts": {
        "vercel-build": "yarn prisma migrate deploy && yarn prisma generate && yarn workspace crossant-web next build",
        "dev:bot": "yarn workspace crossant tsup --watch --minify",
        "dev:run": "node packages/bot/dist/cli.js run --debug",
        "dev:rawrun": "node packages/bot/dist/shardstart.js --debug",
        "dev:web": "yarn workspace crossant-web next dev",
        "prod:prepare": "git pull && yarn && yarn prisma migrate deploy && yarn prisma generate && yarn workspace crossant tsup --minify"
    },
    "packageManager": "yarn@3.0.2"
}
